{
  "name": "pizza_ordering_backend",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "MIT",
  "dependencies": {
    "@types/cors": "^2.8.17",
    "@types/decomment": "^0.9.5",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.7",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "decomment": "^0.9.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jest": "^29.7.0",
    "morgan": "^1.10.0",
    "nodemon": "^3.1.7",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typeorm": "^0.3.20",
    "typeorm-extension": "^3.6.3",
    "typescript": "^5.7.2",
    "zod": "^3.24.1"
  },
  "scripts": {
    "dev": "cross-env ENV=development nodemon --config nodemon.json",
    "test": "cross-env ENV=testing jest",
    "build": "rimraf dist && tsc -p tsconfig.json && tsc-alias",
    "start": "cross-env ENV=production node ./dist/index.js",
    "migration:create": "ts-node ./src/runner/migration_create.ts",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d src/data-source.ts",
    "migration:show": "typeorm-ts-node-commonjs migration:show -d src/data-source.ts",
    "migration:generate": "ts-node ./src/runner/migration_generate.ts",
    "db:create": "ts-node ./node_modules/typeorm-extension/bin/cli.cjs db:create --initialDatabase postgres",
    "db:drop": "ts-node ./node_modules/typeorm-extension/bin/cli.cjs db:drop",
    "seed:run": "ts-node ./node_modules/typeorm-extension/bin/cli.cjs seed:run",
    "seed:create": "ts-node ./node_modules/typeorm-extension/bin/cli.cjs seed:create",
    "start:pm2": "cross-env ENV=production pm2 start ./dist/index.js --name pizza_backend",
    "build:docker": "docker build -t vodang/pizza_backend .",
    "start:docker": "docker run -d -it --name pizza_backend vodang/pizza_backend"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14"
  }
}
